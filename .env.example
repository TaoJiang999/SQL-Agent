# ============================================
# 代理配置 (Proxy Settings)
# ============================================
HTTP_PROXY=http://127.0.0.1:7890
HTTPS_PROXY=http://127.0.0.1:7890

# ============================================
# LangChain/LangSmith 配置
# ============================================
LANGCHAIN_API_KEY=lsv2_pt_xxxxx
LANGCHAIN_TRACING_V2=false
LANGCHAIN_PROJECT=agent-app
LANGCHAIN_ENDPOINT=https://api.smith.langchain.com

# ============================================
# 默认模型配置 (Default Model Settings)
# ============================================
MODEL_NAME=gemini-2.5-flash
MODEL_PROVIDER=google_genai
MODEL_BASE_URL=https://api.xstx.info
MODEL_API_KEY=sk-xxxxx
MODEL_TEMPERATURE="0.7"
MODEL_MAX_TOKENS="4096"

# ============================================
# Docker 沙盒配置 (Docker Sandbox Settings)
# 用于安全执行 SQL 查询和数据库交互
# ============================================
DOCKER_SANDBOX_ENABLED=true
DOCKER_SANDBOX_IMAGE=mysql:8.0
DOCKER_SANDBOX_CONTAINER_NAME=sql-agent-sandbox
DOCKER_SANDBOX_NETWORK=sql-agent-network

# 沙盒数据库配置 (MySQL)
SANDBOX_DB_HOST=localhost
SANDBOX_DB_PORT=3307
SANDBOX_DB_USER=sandbox_user
SANDBOX_DB_PASSWORD=sandbox_password
SANDBOX_DB_NAME=sandbox_db
SANDBOX_DB_ROOT_PASSWORD=root_password

# 沙盒资源限制
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_CPU_LIMIT=1.0
SANDBOX_TIMEOUT_SECONDS=30

# ============================================
# 调试配置 (Debug Settings)
# 开启后可查看主Agent和子Agent的调用情况
# ============================================
DEBUG=true
DEBUG_AGENT_CALLS=true
DEBUG_LOG_LEVEL=DEBUG
DEBUG_SHOW_PROMPTS=false
DEBUG_SHOW_TOOL_CALLS=true
